extends layout
include ../partials/mixins

block content
  +navbar-mixin
  h1= title

  form(method='POST')
    div.form-group
      label(for='Title') Title:
      input#title.form-control(type='text' placeholder='title' name='title' value=(undefined===message ? '' : message.title) )
      label(for='Text') Text:
      input#text.form-control(type='text' placeholder='text' name='text' value=(undefined===message ? '' : message.text) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg