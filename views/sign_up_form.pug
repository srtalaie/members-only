extends layout

block content
  h1=title

  form(method='POST')
    div.form-group
      label(for='first_name') First Name:
      input#first_name.form-control(type='text', placeholder='First name' name='first_name' required value=(undefined===user  ? '' : user.first_name) )
      label(for='last_name') Last Name:
      input#last_name.form-control(type='text', placeholder='Last name' name='last_name' required value=(undefined===user ? '' : user.last_name))
    div.form-group
      label(for='username') Username:
      input#username.form-control(type='text' placeholder='username' name='username' value=(undefined===user ? '' : user.username) )
      label(for='email') Email Address:
      input#email.form-control(type='email' placeholder='example@example.com' name='email' value=(undefined===user ? '' : user.email) )
    div.form-group
      label(for='password') Password:
      input#password.form-control(type='password' name='password' value=(undefined===user ? '' : user.passwordHash) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg