extends layout

block content
  h1=title

  form(method='POST')
    div.form-group
      label(for='username') Username:
      input#username.form-control(type='text' placeholder='username' name='username' value=(undefined===username ? '' : username) )
      label(for='password') Password:
      input#password.form-control(type='password' name='password' value=(undefined===password ? '' : password) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg